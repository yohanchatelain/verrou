

SRC=interlibmath.cxx tinymt64.c
FLAGS= -std=c++11 -DLIBMATHINTERP -I../backend_verrou -Wall -O0 -DVERROU_NUM_AVG=2 -DVERROU_DET_HASH=vr_double_tabulation_hash -Wfatal-errors
#FLAGS+=-DCLIENTREQUEST #not required if the user include libgcc_s.so 

CXX=g++

interlibmath.so: $(SRC)
	$(CXX) $(FLAGS) $(SRC) -lquadmath -lm -ldl -shared -fPIC   -o interlibmath.so


testCos: testCos.cxx
	$(CXX) -g -Wall -lm  testCos.cxx -o testCos

clean:
	rm -f testCos interlibmath.so
